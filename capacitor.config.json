{
  "appId": "com.storehouse.app",
  "appName": "Storehouse",
  "webDir": "dist",
  "bundledWebRuntime": false,
  "server": {
    "androidScheme": "https",
    "allowNavigation": ["*"]
  },
  "android": {
    "backgroundColor": "#ffffff",
    "allowMixedContent": true,
    "captureInput": true,
    "webContentsDebuggingEnabled": false
  },
  "plugins": {
    "SplashScreen": {
      "launchShowDuration": 2000,
      "backgroundColor": "#4F46E5",
      "showSpinner": false,
      "androidSpinnerStyle": "small",
      "spinnerColor": "#ffffff"
    }
  }
}
