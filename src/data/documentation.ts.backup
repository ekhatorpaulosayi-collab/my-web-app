// Helper function to get documentation by ID
export function getDocById(id: string): Documentation | undefined {
  return DOCUMENTATION.find(doc => doc.id === id);
}

// Helper function to get documentation by category
export function getDocsByCategory(category: Documentation['category']): Documentation[] {
  return DOCUMENTATION.filter(doc => doc.category === category).sort((a, b) => (b.priority || 0) - (a.priority || 0));
}

// Helper function to get high-priority docs for new users
export function getOnboardingDocs(): Documentation[] {
  return DOCUMENTATION.filter(doc => (doc.priority || 0) >= 75).sort((a, b) => (b.priority || 0) - (a.priority || 0));
}
