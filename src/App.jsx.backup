            </div>

            <div className="debts-list">
              {getFilteredDebts().length === 0 ? (
                <div className="no-debts">
                  {debtSearchQuery ?
                    'No debts match your search' :
                    filterStatus === 'unpaid' ?
                    'No unpaid debts! All customers have paid.' :
                    filterStatus === 'paid' ?
                    'No paid debts yet.' :
                    'No credit sales recorded yet'}
