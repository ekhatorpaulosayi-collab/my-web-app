            <div className="settings-footer">
              <button className="settings-save" onClick={handleSaveSettings}>
                Save Settings
              </button>
              <button className="settings-cancel" onClick={() => {
                setSettingsForm({ ...settings });
                setShowSettings(false);
              }}>
                Cancel
