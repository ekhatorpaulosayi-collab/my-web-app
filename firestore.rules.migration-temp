rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // TEMPORARY RULES FOR MIGRATION
    // ⚠️ ONLY USE DURING MIGRATION - RESTORE ORIGINAL AFTER! ⚠️

    // Allow reading all data for migration
    match /{document=**} {
      allow read: if true;
      allow write: if request.auth != null; // Keep write protected
    }
  }
}
